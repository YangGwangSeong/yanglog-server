{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2020",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"../*": ["./src/*"]
		},
		"noEmit": false,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": false
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules", "dist", "src/test/**/*.spec.ts", "./src/api"]
}
